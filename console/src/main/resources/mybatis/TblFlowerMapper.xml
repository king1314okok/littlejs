        <result column="FLOWER_ID" jdbcType="INTEGER" property="flowerId"/>
        <result column="FLOWER_NAME" jdbcType="VARCHAR" property="flowerName"/>
        <result column="ORG_CODE" jdbcType="VARCHAR" property="orgCode"/>
