            </if>
            <if test="addition != null">
                ADDITION,
            </if>
            <if test="sendWay != null">
                SEND_WAY,
            </if>
            <if test="description != null">
                DESCRIPTION,
            </if>
            <if test="reserved1 != null">
                RESERVED1,
            </if>
            <if test="reserved2 != null">
