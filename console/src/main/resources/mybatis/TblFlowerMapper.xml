    <!--flowerName不去重-->
    <select id="findByFlowerNameAndTypeName" resultMap="UnionResultMap" resultType="com.oudake.console.model.TblFlower">
        select distinct
        <include refid="Union_Column_List"/>
        from TBL_FLOWER t1
        left join TBL_FLOWER_TYPE t2
        on t1.FLOWER_ID = t2.FLOWER_ID
        left join TBL_FLOWER_CODE t3
        on t2.TYPE_NAME = t3.TYPE_NAME
        where 1 = 1
        <if test="flower.flowerName != null and flower.flowerName != ''">
          and t1.FLOWER_NAME like CONCAT('%', #{flower.flowerName}, '%')
        </if>
        <if test="flower.typeName != null and flower.typeName != ''">
            and (
            t3.TYPE_NAME like CONCAT('%', #{flower.typeName}, '%')
            or t3.FATHER_NAME like CONCAT('%', #{flower.typeName}, '%')
            )
        </if>
        order by t1.FLOWER_ID asc
    </select>

    <select id="findById" resultMap="UnionResultMap" resultType="com.oudake.console.model.TblFlower">
        select distinct
        <include refid="Union_Column_List"/>
        from TBL_FLOWER t1
        left join TBL_FLOWER_TYPE t2
        on t1.FLOWER_ID = t2.FLOWER_ID
        left join TBL_FLOWER_CODE t3
        on t2.TYPE_NAME = t3.TYPE_NAME
        where 1 = 1
        <if test="flowerId != null and flowerId != ''">
            and t1.FLOWER_ID = #{flowerId}
        </if>
    </select>
</mapper>